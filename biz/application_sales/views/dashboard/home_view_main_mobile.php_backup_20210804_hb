	<script type="text/javascript">
	  function go_page(id) {
	    if(id=='schedule') {
	      location.href = "<?php echo site_url(); ?>/biz/schedule/tech_schedule";
	    } else if (id=='durian_car') {
				location.href = "<?php echo site_url(); ?>/biz/durian_car/car_drive_list";
			} else {
	      alert('준비 중입니다.');
	    }
	  }
