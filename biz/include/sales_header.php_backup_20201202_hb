<script type="text/javascript">

jQuery(function ($) {
        $('#history').hover(
            function () { // 마우스 오버일 경우에 실행
                $(".history").toggle();
            },
            function () {// 마우스 아웃될 경우에 실행
                $(".history").toggle();
            }
        );
    });

    jQuery(function ($) {
        $('.history').hover(
            function () { // 마우스 오버일 경우에 실행
                $(".history").show();
            },
            function () {// 마우스 아웃될 경우에 실행
                $(".history").toggle();
            }
        );
    });

var url_path = location.pathname.split('/')[2];

if (url_path != 'fundreporting') {
  var con = '정상 로그아웃';
  var login_time = sessionStorage.getItem('login_time');

    $.ajax({
      type: 'POST',
      url: '/index.php/fundreporting/logout',
      datatype: 'json',
      data: {
        con:con,
        login_time:login_time
      },
      success: function(data) {
        //console.log(data);
      }
    });
    sessionStorage.clear();
}

</script>
