jQuery(function ($) {
        $('#history').hover(
            function () { // 마우스 오버일 경우에 실행
                $(".history").toggle();
            },
            function () {// 마우스 아웃될 경우에 실행
                $(".history").toggle();
            }
        );
    });

jQuery(function ($) {
    $('.history').hover(
        function () { // 마우스 오버일 경우에 실행
            $(".history").show();
        },
        function () {// 마우스 아웃될 경우에 실행
            $(".history").toggle();
        }
    );
});
